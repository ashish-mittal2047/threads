
<link rel='stylesheet' type='text/css' href="/css/user_profile.css">
<h1>
    Threads/<%= title %>
</h1>


<% if(user.id == profile_user.id){ %>
    <!--If user matches, then show profile update form-->
    <form action="/users/update/<%= profile_user.id%>" method="POST">
        <input type="text" name="name" placeholder="Your Name" value="<%= profile_user.name %>">
        <input type="email" name="email" placeholder="Your Email ID" value="<%= profile_user.email %>">
        <input type="submit" value="Update">
    </form>

    <% }else{ %>
    <!--else show only the profile info-->
    <p><%= profile_user.name%></p>
    <p><%= profile_user.email%></p>
<% } %>

