<header>
    Page Header
</header>
<ul>
    <% if(locals.user){ %>  <!--This means user is signed in. We can user either locals.user or only user-->
        <li>
            <a href="/users/profile">
                <%= user.name %>
            </a>
        </li>
        <li>
            <a href="/users/sign-out">
                Sign Out!
            </a>
        </li>
    <%} else{%>
        <li>
            <a href="/users/sign-in">
                Sign In
            </a>
        </li>
        <li>
            <a href="/users/sign-out">
                Sign Out
            </a>
        </li>
    <% } %>
</ul>