<h1>
<%= title %>
</h1>
<% if(locals.user){ %>        
    <section id="feed-posts">
        <h4>
            Posts
        </h4>
        <form action="/posts/create" id="new-post-form" method="POST">
            <textarea name="content" cols="30" rows="3" placeholder="How are you feeling?" required></textarea>
            <input type="submit" value="Post">
        </form>
    </section>
<% } %>
<div id="posts-list-container">
    <ul>
        <% for(post of posts){ %>
            <li>
                <h4><%= post.user.name %></h4>
                <p>    
                    <%= post.content %>
                    <% if(locals.user && locals.user.id == post.user.id){ %>
                    <a href="/posts/destroy/<%= post.id %>">
                        <button>Delete Post!</button>
                    </a>
                    <% } %>
                </p>
                <div class="post-comments">
                    <% if(locals.user){ %>
                        <form action="/comments/create" method="POST">
                            <input type="text" name="content" placeholder="Write a Comment..." required>
                            <input type="hidden" name="post" value= <%= post._id %> <!-- This sends the id of post to which comment belongs-->
                            <input type="submit" value="Add Comment">
                        </form>
                    <% } %>    

                    <div class="post-comments-list">
                        <ul id="post-comments-<%= post._id %>">
                            <% for(comment of post.comments){ %>
                                <p>
                                    <%= comment.content %>
                                    <br>
                                    <small>
                                        <%= comment.user.name %>
                                    </small>
                                    <% if(locals.user && locals.user.id == comment.user.id){ %>
                                        <a href="/comments/destroy/<%= comment.id %>">
                                            <button>Delete Comment!</button>
                                        </a>
                                    <% } %>
                                </p>
                            
                            <% } %>
                        </ul>
                    </div>
                </div>
            </li>
        <% } %>
    </ul>
</div>